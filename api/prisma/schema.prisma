generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  isVerified              Boolean   @default(false)
  isAdmin                 Boolean   @default(false)
  verificationToken       String?
  verificationTokenExpiry DateTime?

  resetToken       String?
  resetTokenExpiry DateTime?

  reviews     Review[]
  submissions SupplierSubmission[]
}

model Supplier {
  id               Int     @id @default(autoincrement())
  name             String
  slug             String  @unique
  shortDescription String?
  description      String?
  website          String?
  phone            String?
  email            String?
  heroImage        String?
  logoImage        String?
  isVerified       Boolean @default(false)
  isScam           Boolean @default(false)
  isContractHolder Boolean @default(false)
  isBroker         Boolean @default(false)

  homeRank         Int?     @default(0)
  socialLink       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  categories   SupplierCategory[]
  reviews      Review[]
  images       SupplierImage[]
  addresses    SupplierAddress[]
  region       Region?            @relation(fields: [regionId], references: [id])
  regionId     Int?
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  headline    String?
  description String?
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  suppliers SupplierCategory[]
}

model SupplierCategory {
  supplierId Int
  categoryId Int

  supplier Supplier @relation(fields: [supplierId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@id([supplierId, categoryId])
}

model Region {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  headline    String?
  description String?
  stateCode   String?
  marketStats Json?
  mapImage    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  suppliers Supplier[]
}




model Review {
  id            Int      @id @default(autoincrement())
  supplierId    Int
  customerId    Int
  author        String   // reviewer_name
  ratingOverall Int      // review_rating (1-5 integer)
  body          String   // review_text
  images        String[] @default([]) // review_images
  isApproved    Boolean  @default(false)
  createdAt     DateTime @default(now()) // review_date
  updatedAt     DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([supplierId, isApproved, createdAt])
  @@index([customerId, createdAt])
}




model SupplierImage {
  id         Int      @id @default(autoincrement())
  supplierId Int
  url        String
  caption    String?
  isPrimary  Boolean  @default(false)
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@index([supplierId, order])
}


model SupplierAddress {
  id            Int      @id @default(autoincrement())
  supplierId    Int
  streetAddress String?
  city          String?
  state         String?
  country       String?
  zipCode       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@index([supplierId])
  @@index([state])
  @@index([country])
}

model SupplierSubmission {
  id                 Int       @id @default(autoincrement())
  customerId         Int
  companyName        String
  companyAddress     String
  contactEmail       String
  contactPhone       String?
  website            String?
  description        String
  logoUrl            String?
  bannerUrl          String?
  socialMedia        Json?
  ownershipDocuments String[]  @default([])
  notes              String?
  status             String    @default("pending")
  adminNotes         String?
  reviewedBy         Int?
  reviewedAt         DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId, createdAt])
  @@index([status, createdAt])
}

model CategoryPage {
  id                    Int      @id @default(autoincrement())
  
  // SEO & Metadata
  pageTitle             String
  metaTitle             String
  metaDescription       String
  slug                  String   @unique
  canonicalUrl          String?
  ogTitle               String?
  ogDescription         String?
  ogImage               String?
  noindex               Boolean  @default(false)
  nofollow              Boolean  @default(false)
  enableFaqSchema       Boolean  @default(true)
  enableBreadcrumbSchema Boolean @default(true)
  customSchema          Json?
  
  // Logo Section
  logoImage             String?
  logoImageAlt          String?
  
  // Hero Section
  heroImage             String?
  heroImageAlt          String?
  heroH1                String?
  heroText              String?
  
  // Featured Suppliers
  featuredSuppliersH2   String?
  featuredSuppliersText String?
  supplierSourceType    String   @default("manual")
  supplierIds           Int[]    @default([])
  
  // Centered Value Prop
  centeredValueH2      String?
  centeredValueText    String?
  
  // Content Blocks (JSON array)
  contentBlocks         Json     @default("[]")
  
  // FAQ Section
  faqSectionH2          String?
  faqs                  Json     @default("[]")
  
  // Optional Fields
  internalLinks         Json?
  customHtml             String?
  lastUpdated            DateTime?
  authorOverride         String?
  topicCategory          String?
  enableDivider          Boolean  @default(false)
  
  // Metadata
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([slug])
  @@index([createdAt])
}
