{
  "name": "destockify-api",
  "version": "0.1.0",
  "description": "Backend API for Destockify wholesale directory",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "gcp-build": "npm run prisma:generate && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.1",
    "@google-cloud/storage": "^7.15.0",
    "@prisma/client": "^6.11.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}

