{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "@/*": ["./*"],
      "@lib/*": ["lib/*"],
      "@modules/*": ["modules/*"],
      "@middleware/*": ["middleware/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

